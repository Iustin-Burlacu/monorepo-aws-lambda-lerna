{
  "name": "root",
  "private": true,
  "description": "Lambda monorepo",
  "devDependencies": {
    "@types/node": "^20.4.9",
    "lerna": "^8.1.2",
    "typescript": "^4.9.4"
  },
  "workspaces": [
    "Lambdas/*",
    "Lib/*"
  ],
  "scripts": {
    "compile": "npx lerna run compile",
    "compile:Lib/Log": "cd Lib/Log && npm run compile",
    "compile:Lib/StepFunctionWrapper": "cd Lib/StepFunctionWrapper && npm run compile",
    "compile:Lib/S3ClientWrapper": "cd Lib/S3ClientWrapper && npm run compile",
    "compile:Lib/SQSClientWrapper": "cd Lib/SQSClientWrapper && npm run compile",
    "compile:Lambdas/api-gw-lambda": "npx lerna run compile --scope @my/* --scope api-gw-lambda",
    "compile:Lambdas/dynamodb-lambda": "npx lerna run compile --scope @my/* --scope dynammodb-lambda",
    "compile:Lambdas/s3-lambda": "npx lerna run compile --scope @my/* --scope s3-lambda",
    "compile:Lambdas/sqs-lambda": "npx lerna run compile --scope @my/* --scope sqs-lambda",
    "test": "npx lerna run test",
    "push": "npx lerna version --conventional-commits --yes",
    "push:prerelease": "npx lerna version --conventional-prerelease --yes",
    "push:graduate": "npx lerna version --conventional-graduate --force-conventional-graduate --yes",
    "clean": "npx lerna run clean",
    "clean:node": "npx lerna run clean:node",
    "clean:node:main": "npx rimraf node_modules",
    "install:log": "npm --prefix=Lib/Log install && npm run compile:log",
    "install:step-function": "npm --prefix=Lib/StepFunctionWrapper install && npm run compile:step-function",
    "install:sqs-client": "npm --prefix=Lib/SQSClientWrapper install && npm run compile:sqs-client",
    "install:s3-client": "npm --prefix=Lib/S3ClientWrapper install && npm run compile:s3-client",
    "install:api-gw": "npm --prefix=Lambdas/api-gw-lambda install",
    "install:dynamodb": "npm --prefix=Lambdas/dynamodb-lambda install",
    "install:s3": "npm --prefix=Lambdas/s3-lambda install",
    "install:sqs": "npm --prefix=Lambdas/sqs-lambda install",
    "install:all": "npm run install:log && npm run install:s3-client && npm run install:sqs-client && npm run install:step-function && npm run install:api-gw && npm run install:dynamodb && npm run install:s3 && npm run install:sqs",
    "prepack": "npmignore --auto",
    "build:Lambdas/api-gw-lambda": "npx lerna run build --scope @my/* --scope api-gw-lambda"
  },
  "publishConfig": {
    "ignore": [
      "src/",
      "test/"
    ]
  }
}
